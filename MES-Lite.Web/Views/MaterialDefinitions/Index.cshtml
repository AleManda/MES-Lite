@model MES_Lite.Web.Common.PaginatedList<MES_Lite.MesEntities.MaterialDefinition>

@{
    ViewData["Title"] = "Material Definitions";
}

<h1>Material Definitions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].MaterialId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UoM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].MaterialClassId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Specification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Conformity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Critical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].RequiresDoubleCheck)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialClassId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conformity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Critical)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresDoubleCheck)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

    <a asp-page="/MaterialDefinitions/Index"
       asp-route-pageIndex="@(Model.PageIndex - 1)"
       class="btn btn-primary @prevDisabled">
        Previous
    </a>
    <a asp-page="/MaterialDefinitions/Index"
       asp-route-pageIndex="@(Model.PageIndex + 1)"
       class="btn btn-primary @nextDisabled">
        Next
    </a>
}
