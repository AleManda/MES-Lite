@model MES_Lite.Web.Models.PersonnelViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Personnels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-page="" method="get">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonnelList[0].PersonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonnelList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonnelList[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonnelList[0].Qualification)
            </th>
            <th></th>
        </tr>

            <tr>
                <th>

                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchid" asp-for="CurrentFilterPersonId" />
                        </p>
                    </div>

                </th>
                <th>

                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchname" asp-for="CurrentFilterName" />
                        </p>
                    </div>

                </th>
                <th>

                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchrole" asp-for="CurrentFilterRole" />

                        </p>
                    </div>
                </th>
                <th>
                    <div class="form-actions no-color">
                        <p>
                            <input type="text" name="searchqual" asp-for="CurrentFilterQualification" />

                        </p>
                    </div>
                </th>
               
                <th>
                    <div class="form-actions no-color">
                        <p>
                            <input type="submit" value="Search" class="btn-primary" />
                        </p>
                    </div>
                </th>

                <th></th>
            </tr>

    </thead>
    <tbody>
@foreach (var item in Model.PersonnelList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</form>



@{
    var prevDisabled = !Model.PersonnelList.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.PersonnelList.HasNextPage ? "disabled" : "";

    <a asp-page="/MaterialDefinitions/Index"
       asp-route-searchid="@(Model.CurrentFilterPersonId)"
       asp-route-searchname="@(Model.CurrentFilterName)"
       asp-route-searchrole="@(Model.CurrentFilterRole)"
       asp-route-searchqual="@(Model.CurrentFilterQualification)"

       asp-route-pageIndex="@(Model.PersonnelList.PageIndex - 1)"
       class="btn btn-primary @prevDisabled">
        Previous
    </a>
    <a asp-page="/MaterialDefinitions/Index"
       asp-route-searchid="@(Model.CurrentFilterPersonId)"
       asp-route-searchname="@(Model.CurrentFilterName)"
       asp-route-searchrole="@(Model.CurrentFilterRole)"
       asp-route-searchqual="@(Model.CurrentFilterQualification)"

       asp-route-pageIndex="@(Model.PersonnelList.PageIndex + 1)"
       class="btn btn-primary @nextDisabled">
        Next
    </a>
}